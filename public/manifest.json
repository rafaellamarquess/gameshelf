{
  "name": "GameHub Arcade",
  "short_name": "GameHub",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "theme_color": "#121212",
  "background_color": "#000000",
  "description": "Coleção de jogos web offline e multiplayer, direto no seu navegador.",
  "lang": "pt-BR",
  "dir": "ltr",
  "orientation": "landscape",
  "categories": ["games", "arcade", "multiplayer"],
  "iarc_rating_id": "gamezone2025",
  "prefer_related_applications": false,

  "icons": [
    {
      "src": "/assets/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/assets/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "screenshots": [
    {
      "src": "/assets/screenshots/arcade.png",
      "sizes": "540x720",
      "type": "image/png",
      "label": "Tela principal da galeria de jogos"
    },
    {
      "src": "/assets/screenshots/jogo-multiplayer.png",
      "sizes": "540x720",
      "type": "image/png",
      "label": "Modo multiplayer em tempo real"
    }
  ],

  "shortcuts": [
    {
      "name": "Jogos Populares",
      "short_name": "Populares",
      "description": "Veja os jogos mais jogados",
      "url": "/jogos/populares",
      "icons": [{ "src": "/assets/icons/star.png", "sizes": "96x96" }]
    },
    {
      "name": "Novo Jogo",
      "short_name": "Novo",
      "description": "Começar um novo jogo",
      "url": "/jogos/novo",
      "icons": [{ "src": "/assets/icons/plus.png", "sizes": "96x96" }]
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+gamehub",
      "url": "/jogar/%s"
    }
  ],

  "handle_links": {
    "urls": ["https://gamehub.com/*"],
    "exclude_paths": ["/api/*"]
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "scope_extensions": [
    { "origin": "https://cdn.gamehub.com" },
    { "origin": "https://api.gamehub.com" }
  ],

  "widgets": [
    {
      "name": "Top Jogos",
      "short_name": "Ranking",
      "description": "Ranking de jogos mais jogados",
      "url": "/widgets/ranking",
      "icons": [{ "src": "/assets/icons/ranking.png", "sizes": "96x96" }]
    },
    {
      "name": "Jogo do Dia",
      "short_name": "Do Dia",
      "description": "Sugestão de jogo do dia",
      "url": "/widgets/sugestao",
      "icons": [{ "src": "/assets/icons/controller.png", "sizes": "96x96" }]
    }
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.gamehub.arcade",
      "id": "com.gamehub.arcade"
    }
  ]
}
